{
  "configVersion": "1.0",
  "rules": [
    {
      "path": ".",
      "importConventions": [
        {
          "rule": "relative-internal-absolute-external",
          "domains": [
            {
              "path": "src/features/retail",
              "alias": "@retail",
              "enabled": true
            },
            {
              "path": "src/features/shared",
              "alias": "@shared",
              "enabled": true
            }
          ]
        }
      ]
    }
  ]
}