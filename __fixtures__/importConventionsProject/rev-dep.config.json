{
  "configVersion": "1.0",
  "rules": [
    {
      "path": ".",
      "importConventions": [
        {
          "rule": "relative-internal-absolute-external",
          "domains": [
            {
              "path": "src/features/auth",
              "alias": "@auth",
              "enabled": true
            },
            {
              "path": "src/features/users",
              "alias": "@users",
              "enabled": true
            },
            {
              "path": "src/shared/ui",
              "alias": "@ui",
              "enabled": true
            }
          ]
        }
      ]
    }
  ]
}